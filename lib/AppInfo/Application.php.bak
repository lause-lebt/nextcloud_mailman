<?php
namespace OCA\Mailman\AppInfo;

use \OCP\AppFramework\App;

use \OCA\Mailman\Service\ConfigService;


class Application extends App {

    public function __construct(array $urlParams=array()){
        parent::__construct('mailman', $urlParams);

        $container = $this->getContainer();

        /**
         * Controllers
         */
        $container->registerService('ConfigService', function($c) {
            return new ConfigService(
                $c->query('Config'),
                $c->query('AppName')
            );
        });

        $container->registerService('Config', function($c) {
            return $c->query('ServerContainer')->getConfig();
	});

	$container->registerService('MMService', function($c) {
		return new MailmanService(
			$c->query('ConfigService'),
			$c->query('ClientService'),
			$c->query('AppName')
		);
	});

    }
}
